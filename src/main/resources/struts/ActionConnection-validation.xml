<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="username">
        <field-validator type="requiredstring" short-circuit="true">
            <message>
                Pseudo absent
            </message>
        </field-validator>
    </field>

    <field name="password">
        <field-validator type="requiredstring" short-circuit="true">
            <message>
                Mot de passe absent
            </message>
        </field-validator>
    </field>
</validators>